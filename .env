# SafeShot Configuration
# Copy this file to .env.local and modify as needed

# Watermarking defaults
WATERMARK_TEXT=Protected by SafeShot
WATERMARK_OPACITY=0.7
WATERMARK_POSITION=bottom-right
WATERMARK_FONT_SIZE=24

# Processing defaults
DEFAULT_CLOAK_INTENSITY=0.5
DEFAULT_STYLE_STRENGTH=0.3
DEFAULT_CROP_SENSITIVITY=0.5
DEFAULT_EDGE_SOFTNESS=0.2

# UI defaults
DEFAULT_THEME=dark
SHOW_ADVANCED_OPTIONS=true
MAX_BATCH_SIZE=10

# Performance settings
MAX_IMAGE_SIZE=2048
PROCESSING_TIMEOUT=30
ENABLE_GPU=true

# Development settings
DEBUG=false
LOG_LEVEL=INFO